# The syntax is "key = value". The whitespace around the
# equals doesn't matter.

# background = 222222
# foreground = ffffff

# Comments start with a `#` and are only valid on their own line.
# Blank lines are ignored!

# Empty values reset the configuration to the default value
font-size = 20

# theme = gruvbox-material
theme = rose-pine
background = 000000

# fix for ghostty option as alt
macos-option-as-alt = true
keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = cmd+d=new_split:down
keybind = cmd+shift+d=new_split:right

# No confirmation in closing Ghostty
confirm-close-surface = false

